{
  "productName": "dogit",
  "version": "0.1.0",
  "identifier": "tt.dogi.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Dogit",
        "transparent": true,
        "skipTaskbar": true,
        "focus": false,
        "alwaysOnTop": true,
        "resizable": false,
        "decorations": false,
        "shadow": false,
        "visible": false,
        "width": 440,
        "height": 460
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/fax1ty/dogit/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg0REQyNTZGMEUzMEUzQjAKUldTdzR6QU9ieVhkaEJhc2lpbFRGK1hUQUlScUJaSFQ0RDRTZnROb2Y0NzJuRVVkQ1MyUThSc2wK"
    },
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["dogit"]
      }
    }
  }
}
